@model DHWeb.Models.ViewModels.Home.FormViewModel



<div class="card">

    <div class="card-body">

        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>



        <div class="form-group">
            <label asp-for="UserType"></label>

            <select asp-for="UserType" asp-items="Model.UserTypes" class="form-control"></select>
        </div>

        <div class="form-group">

            <div class="form-check">
                <input type="checkbox" asp-for="IsAllow" class="form-check-input" />
                <label asp-for="IsAllow" class="form-check-label">
                </label>
            </div>

        </div>

        <div class="form-group">
            <div class="form-check-inline">
                <input type="radio" asp-for="UserType" id="UserType_NONE" class="form-check-input" value="NONE" />
                <label for="UserType_NONE" class="form-check-label">@ViewMethod.GetDisplayName(EUserType.NONE)</label>
            </div>

            <div class="form-check-inline">
                <input type="radio" asp-for="UserType" id="UserType_ADMIN" class="form-check-input" value="ADMIN" />
                <label for="UserType_ADMIN" class="form-check-label">@ViewMethod.GetDisplayName(EUserType.ADMIN)</label>
            </div>

            <div class="form-check-inline">
                <input type="radio" asp-for="UserType" id="UserType_USER" class="form-check-input" value="USER" />
                <label for="UserType_USER" class="form-check-label">@ViewMethod.GetDisplayName(EUserType.USER)</label>
            </div>

        </div>


        <div class="form-group">

            @foreach (var item in Model.UserTypes)
            {
                <div class="form-check-inline">
                    <input type="checkbox" id="@item.Value" class="form-check-input" />
                    <label for="@item.Value" class="form-check-label">@item.Text</label>
                </div>
            }

        </div>

    </div>


</div>